PORT=4000
NODE_ENV=development

# JWT
JWT_ACCESS_SECRET=change_me_access
JWT_REFRESH_SECRET=change_me_refresh
JWT_ACCESS_TTL_SECONDS=900
JWT_REFRESH_TTL_SECONDS=2592000

# MySQL
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=
MYSQL_DATABASE=vehicle_marketplace

# S3-compatible storage (MinIO now, AWS later)
# provider: "minio" or "aws"
S3_PROVIDER=minio
S3_REGION=auto

# MinIO/local endpoint (only used when S3_PROVIDER=minio)
S3_ENDPOINT=http://localhost:9000
S3_FORCE_PATH_STYLE=true

S3_ACCESS_KEY_ID=minioadmin
S3_SECRET_ACCESS_KEY=minioadmin
S3_BUCKET=vehicle-images

# Public base used to build public urls returned to client
# For MinIO local this can be:
# http://localhost:9000/vehicle-images
# For production use your CDN/custom domain:
S3_PUBLIC_BASE_URL=http://localhost:9000/vehicle-images

# OTP settings (MVP: simulated OTP)
OTP_TTL_SECONDS=300
OTP_COOLDOWN_SECONDS=30
OTP_DEV_FIXED=123456
